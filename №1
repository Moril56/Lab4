#include <stdio.h>
#include <math.h>

int main() {
    double a, b, c, den;

    do {
        // Введення значень a та b
        printf("Введіть значення a: ");
        scanf("%lf", &a);
        printf("Введіть значення b: ");
        scanf("%lf", &b);

        // Перевірка допустимості вхідних параметрів
        den = a - 2 * b;
        if (den <= 0) {
            printf("Ділення на 0 або корінь з від'ємного числа неможливий. Будь ласка, введіть інші значення.\n");
        }
    } while (den <= 0); // Повторюємо цикл, поки вхідні значення недопустимі

    // Обчислення виразу
    c = (2 * a - b) * (2 * b + a) / (sqrt(den) + 2 * b);

    // Виведення результату
    printf("Результат обчислення: %.2lf\n", c);

    return 0;
}
